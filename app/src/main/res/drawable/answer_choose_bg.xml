<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#dbd2d2"></solid>
            <gradient android:angle="270" android:endColor="#dbd2d2" android:startColor="#dbd2d2"></gradient>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#ffffff"></solid>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff"></gradient>
        </shape>
    </item>

</selector>
